{
    "name": "WebRequestBlock",
    "description": "指定したURLでの指定したURLのRequestをBlock",
    "manifest_version": 2,
    "version": "1.2.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "storage",
        "*://*/*"
    ],
    "icons":{
        "48":"img/48x48.png",
        "96":"img/96x96.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "false.png",
        "default_title": "webRequestBlock",
        "default_popup":"popup/popup.html"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}
