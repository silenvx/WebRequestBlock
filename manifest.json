{
    "name": "WebRequestBlock",
    "description": "指定したURLでの指定したURLのrequestをblock",
    "manifest_version": 2,
    "version": "1.0.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "storage",
        "*://*/*"
    ],
    "icons":{
        "48":"icon.svg",
        "96":"icon.svg"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "false.png",
        "default_title": "webRequestBlock",
        "default_popup":"popup/popup.html"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}
